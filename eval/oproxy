#!/bin/sh

testfile=$OBU_TESTFILE
key=$OBU_KEY

oproxy="../oproxy"

# oproxy outputs intermediate logs to a logs/ folder
rm -rf logs
mkdir -p logs

# run 
node --enable-source-maps --import $oproxy/dist/index.js $testfile

logfile=logs/*.log

node $oproxy/dist/log/index.js -c $oproxy/src/tests/checks.js $logfile
# write process.env.OBU_KEY yes to stderr in index.ts of oproxy or wherever checking logic is


# mark as secure (to stderr)
# >&2 echo $OBU_KEY yes

# mark as insecure (to stderr)
# >&2 echo $OBU_KEY no
